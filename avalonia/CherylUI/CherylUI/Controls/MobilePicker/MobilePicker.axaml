<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="CherylUI.Controls.MobilePicker.MobilePicker"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mobilePicker="clr-namespace:CherylUI.Controls.MobilePicker"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="mobilePicker|MobilePicker">
            <Setter Property="Template">
                <ControlTemplate>
                    <Button Classes="Void" Click="OpenPopup">
                        <DockPanel>
                            <TextBlock Classes="Secondary" Text="{TemplateBinding SelectedItem}" />

                        </DockPanel>
                    </Button>
                </ControlTemplate>
            </Setter>
        </Style>
    </UserControl.Styles>
</UserControl>
